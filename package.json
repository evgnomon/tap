{
  "name": "ssr-typescript-esbuild",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.mjs",
    "watch": "node build.mjs --watch",
    "start": "node dist/server/index.js",
    "dev": "nodemon watch"
  },
  "dependencies": {
    "esbuild-postcss": "^0.0.4",
    "express": "^4.21.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.31",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "esbuild": "^0.25.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "js,ts,jsx,tsx",
    "exec": "npm run build && npm start"
  }
}
