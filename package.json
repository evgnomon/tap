{
  "name": "ssr-typescript-esbuild",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.mjs",
    "watch": "npm run build && nodemon watch",
    "start": "node dist/server/index.js",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx src && tsc --noEmit --project src/client/tsconfig.json && tsc --noEmit --project src/server/tsconfig.json"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "esbuild-postcss": "^0.0.4",
    "express": "^4.21.2",
    "i18next": "^25.0.1",
    "inter-ui": "^4.1.1",
    "lucide-react": "^0.544.0",
    "luxon": "^3.6.1",
    "react": "^18.3.1",
    "react-burger-menu": "^3.1.0",
    "react-date-object": "^2.1.9",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.1",
    "react-router-dom": "^6.30.0",
    "vazirmatn": "^33.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.17.31",
    "@types/react": "^18.3.20",
    "@types/react-burger-menu": "^2.8.7",
    "@types/react-dom": "^18.3.6",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "tailwind.config.js",
      "postcss.config.js"
    ],
    "ext": "js,ts,jsx,tsx,json,css",
    "exec": "npm run build && npm start"
  }
}
